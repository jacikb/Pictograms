<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".AboutActivity">


    <TextView
        android:id="@+id/aboutTextViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/about_title"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageViewPawel"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_below="@+id/aboutTextViewTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        app:srcCompat="@drawable/pawel" />

    <TextView
        android:id="@+id/aboutTextViewAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewPawel"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/about_author" />

    <TextView
        android:id="@+id/aboutTextViewAuthorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutTextViewAuthor"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/about_author_name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/aboutTextViewAuthortel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutTextViewAuthorName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/about_author_tel"
        android:textSize="20sp" />

</RelativeLayout>